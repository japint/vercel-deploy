generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model EventSubmission {
  id                  String   @id @default(cuid())
  partyType           String
  names               String
  date                DateTime
  time                String?
  venue               String?
  venueAddress        String?
  events              String[]
  theme               String?
  colors              String?
  fonts               String?
  mainMessage         String?
  countdown           Boolean
  hasPhotos           Boolean
  backgroundMedia     String?
  backgroundMediaType String
  music               Boolean
  rsvp                Boolean
  rsvpFields          String[]
  rsvpDestination     String
  registryLink        String?
  accommodationInfo   String?
  dressCode           String?
  faq                 String?
  customDomain        String?
  privacy             String
  createdAt           DateTime @default(now())
}
